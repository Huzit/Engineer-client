<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:background="@drawable/reserve_info_box"
        android:layout_height="120dp">

    <TextView
            android:text="2021.11.02 10:00 - 11:00"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/evaluation_datetime"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginLeft="@dimen/pageMargin"
            android:layout_marginStart="@dimen/pageMargin"
            android:layout_marginTop="@dimen/pageMarginHalf"/>

    <TextView
            android:text="냉장고"
            android:textSize="@dimen/font_size"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/evaluation_product"
            app:layout_constraintTop_toBottomOf="@+id/evaluation_datetime"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginLeft="@dimen/pageMargin"
            android:layout_marginStart="@dimen/pageMargin"
            android:textColor="#000000"/>

    <TextView
            android:text="친절해요"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/evaluation_content"
            app:layout_constraintTop_toBottomOf="@+id/evaluation_product"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginLeft="@dimen/pageMargin"
            android:layout_marginStart="@dimen/pageMargin"/>

    <TextView
            android:id="@+id/evaluation_grade"
            android:text="@string/ongoing"
            android:layout_width="@dimen/recyclerTag"
            android:layout_height="wrap_content"
            app:layout_constraintEnd_toStartOf="@+id/imageButton"
            android:gravity="center"
            android:textColor="@color/white"
            android:background="@drawable/button_shape"
            android:backgroundTint="@color/green"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="@dimen/pageMarginHalf"
            android:layout_marginRight="@dimen/pageMargin"
            android:layout_marginEnd="@dimen/pageMargin"/>

    <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/baseline_more_vert_24"
            android:id="@+id/imageButton"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginRight="@dimen/pageMargin"
            android:layout_marginEnd="@dimen/pageMargin"
            android:layout_marginTop="@dimen/pageMarginHalf"/>
</androidx.constraintlayout.widget.ConstraintLayout>