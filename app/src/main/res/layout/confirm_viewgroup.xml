<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                                   xmlns:app="http://schemas.android.com/apk/res-auto"
                                                   xmlns:tools="http://schemas.android.com/tools"
                                                   android:layout_width="match_parent"
                                                   android:layout_height="120dp">

    <TextView
            android:text="냉장고"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/confirm_product"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="16dp" android:textSize="24sp" android:textColor="#000000"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginLeft="16dp"
            android:layout_marginStart="16dp"/>
    <TextView
            android:textSize="12sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/confirm_content"
            android:textColor="#000000" android:text="엔지니어가 친절해요"
            app:layout_constraintStart_toStartOf="@+id/confirm_datetime"
            app:layout_constraintTop_toBottomOf="@+id/confirm_datetime"/>
    <TextView
            android:id="@+id/confirm_grade"
            android:text="별점"
            android:layout_width="73dp"
            android:layout_height="35dp"
            android:gravity="center"
            android:textColor="@color/white"
            android:background="@drawable/button_shape"
            android:backgroundTint="@color/green"
            app:layout_constraintTop_toTopOf="parent" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent" android:layout_marginRight="16dp"
            android:layout_marginEnd="16dp"/>
    <TextView
            android:text="2021.11.02 13:00"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/confirm_datetime"
            android:textColor="#000000"
            android:textSize="16sp"
            app:layout_constraintTop_toBottomOf="@+id/confirm_product"
            app:layout_constraintStart_toStartOf="@+id/confirm_product"
    />

</androidx.constraintlayout.widget.ConstraintLayout>