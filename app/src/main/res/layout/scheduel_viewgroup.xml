<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                                   xmlns:app="http://schemas.android.com/apk/res-auto"
                                                   xmlns:tools="http://schemas.android.com/tools"
                                                   android:layout_width="match_parent"
                                                   android:layout_height="120dp">

    <TextView
            android:text="10:00 - 11:00"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/schedule_datetime"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="16dp" android:textSize="24sp" android:textColor="#000000"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginLeft="16dp"
            android:layout_marginStart="16dp"/>
    <TextView
            android:textSize="12sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/schedule_address"
            android:textColor="#000000" android:text="대연동 용소로 7번길 81 삼삼빌 205호"
            app:layout_constraintStart_toStartOf="@+id/schedule_product"
            app:layout_constraintTop_toBottomOf="@+id/schedule_product"/>
    <TextView
            android:id="@+id/schedule_process"
            android:text="@string/ongoing"
            android:layout_width="73dp"
            android:layout_height="35dp"
            android:gravity="center"
            android:textColor="@color/white"
            android:background="@drawable/button_shape"
            android:backgroundTint="@color/green"
            app:layout_constraintTop_toTopOf="parent" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent" android:layout_marginRight="16dp"
            android:layout_marginEnd="16dp"/>
    <TextView
            android:text="냉장고"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/schedule_product"
            android:textColor="#000000"
            android:textSize="16sp"
            app:layout_constraintTop_toBottomOf="@+id/schedule_datetime"
            app:layout_constraintStart_toStartOf="@+id/schedule_datetime"
    />
    <TextView
            android:text="010-5467-2798"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/schedule_phoneNum"
            android:textSize="12sp"
            app:layout_constraintStart_toStartOf="@+id/schedule_address" app:layout_constraintTop_toBottomOf="@+id/schedule_address"
    />

</androidx.constraintlayout.widget.ConstraintLayout>